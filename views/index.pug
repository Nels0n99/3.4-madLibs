extends layout

block content
  h1 Enter Your Words
  form(method ="POST" action="/story" id="words")
    label(for="noun1") Noun:
    input(type="text" name="noun1" id="noun1" value=`${defaultnoun1}`)
    br
    label(for="verb1") Verb:
    input(type="text" name="verb1" id="verb1" value=`${defaultverb1}`)
    br
    label(for="adjective1") Adjective:
    input(type="text" name="adjective1" id="adjective1" value=`${defaultadjective1}`)
    br
    label(for="noun2") Second Noun:
    input(type="text" name="noun2" id="noun2" value=`${defaultnoun2}`)
    br
    label(for="verb2") Second Verb:
    input(type="text" name="verb2" id="verb2" value=`${defaultverb2}`)
    br
    label(for="adjective2") Second Adjective:
    input(type="text" name="adjective2" id="adjective2" value=`${defaultadjective2}`)
  label(for="storyChoice") Choose One
  select(form="words" name="storyChoice" id="storyChoice")
    option(value = "1") Story 1
    option(value = "2") Story 2
    option(value = "3") Story 3
    option(value = "4") Pick For Me

  br
  button(type="submit" form="words") Tell Me a Story